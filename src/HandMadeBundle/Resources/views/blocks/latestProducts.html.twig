<div class="row latest-products">
    {% block body %}
        {% for product in products %}
            <div class="col-md-4 col-sm-4 products">
                {% set aproductImage = vich_uploader_asset(product, 'imageFile') %}
                <img class="thumbnail" src="{{ asset(['bundles/handmade/', aproductImage]|join) }}"  />
                <h4> {{ product.name | trans }}</h4>
                <span> {{ product.price | number_format(2, ',', ' ') }}</span>
                <div class="buttons">
                    <a class=" btn btn-primary" href="{{ path("product_show", {'id': product.id}) }}">
                        {{ 'Переглянути' | trans }}
                    </a>
                    <a class="btn btn-success" href="#">
                        <span class="glyphicon glyphicon-plus"></span>
                        {{ 'В корзину' | trans }}
                    </a>
                </div>
            </div>
        {% endfor %}
    {% endblock %}
</div>
