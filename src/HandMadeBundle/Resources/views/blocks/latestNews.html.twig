<div class="row latest-news">
    {% block body %}
        {% for article in articles %}
            <div class="col-md-4 col-sm-4 news">
                {% set arcticleImage = vich_uploader_asset(article, 'imageFile') %}
                <img class="img-circle" src="{{ asset(['bundles/handmade/', arcticleImage]|join) }}"  />
                <h2> {{ article.title | trans }}</h2>
                <div class="description">
                    <p>
                        {{ article.shortDescription | trans }}
                    </p>
                </div>
                <div class="more-info">
                    <span class="glyphicon glyphicon-hand-right"></span>
                    <a href="{{ path("article_show", {'id': article.id }) }}">
                        {{ 'Детальніше...' | trans }}
                    </a>
                </div>
            </div>
        {% endfor %}
    {% endblock %}
</div>
