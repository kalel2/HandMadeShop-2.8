{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product edit</h1>

    <form action="{{ path ('product_update', {'id': product.id}) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <div>
            <p>
                <button class="btn pull-left btn-success offset1" type="submit">{{ 'Update'|trans }}</button>
            </p>
        </div>
    </form>

    <ul>
        <li>
            <a href="{{ path('product_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
